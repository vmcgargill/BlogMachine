<h1>Post New Blogs</h1>

<div class="row">
	<div class="col-md-6">
		<form id="submitForm">
			<div class="form-group">
				{{!-- Enter Title --}}
				<label for="title">Title:</label>
				<input placeholder="Post Title" type="text" class="form-control" id="title" maxlength="50">
				<br/>
				{{!-- Enter Body --}}
				<label for="body">Body:</label>
				<textarea placeholder="Post Body" class="form-control" rows="10" id="body" maxlength="100000"></textarea>
				<br/>
				{{!-- Select Category --}}
				<label for="category">Select Category</label>
				<select name="category" id="category" class="DropDowns">
					{{#each category }}
					<option value="{{id}}">{{name}}</option>
					{{/each}}
				</select><br>
				{{!-- Select Mood --}}
				<label for="mood">Select Mood</label>
				<select name="mood" id="mood" class="DropDowns">
					<option value="None">None</option>
					<option class="MoodOpt"value="Happy">Happy</option>
					<option class="MoodOpt"value="Cheerful">Cheerful</option>
					<option class="MoodOpt"value="Dreamy">Dreamy</option>
					<option class="MoodOpt"value="Sad">Sad</option>
					<option class="MoodOpt"value="Excited">Excited</option>
					<option class="MoodOpt"value="Angry">Angry</option>
					<option class="MoodOpt"value="Depressed">Depressed</option>
					<option class="MoodOpt"value="Confused">Confused</option>
					<option class="MoodOpt"value="Romantic">Romantic</option>
					<option class="MoodOpt"value="Silly">Silly</option>
					<option value="Other">Other</option>
				</select><br>
				<input placeholder="Enter Mood" type="text" class="form-control hidden" id="moodInput" maxlength="20"><br>
				{{!-- Submit Blog --}}
				<button type="submit" class="btn btn-success submit">Submit</button>
			</div>
		</form>
			{{!-- Error Partial --}}
      {{> error}}
	</div>
</div>