{{!-- This partial is used for viewing a member profile and can be used as a partial in the userprofile.handlebar file if the signed in user is profile owner 
or the memberprofile.handlebars file if the user is not the owner of the profile.--}}
{{!-- Display Member Profile Details --}}
<div class="row">
    <div class="col">
      <div class="card">
        <img src="{{ member.picture }}" alt="User Picture" class="center">
        <div class="card-body">
            <h2 class="card-title">{{ member.name }}</h2>
            <p class="card-text">Title: {{ member.title }}</p>
            <p class="card-text">Bio: {{ member.bio }}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Hobbies: {{ member.hobbies }}</li>
            <li class="list-group-item">Interests: {{ member.interests }}</li>
            <li class="list-group-item">Email: <a href="mailto:{{ member.website }}">{{ member.email }}</a></li>
            <li class="list-group-item">Website: <a href="{{ member.website }}" target="_blank">{{ member.website }}</a> </li>
        </ul>
      </div>
    </div>
</div><br>